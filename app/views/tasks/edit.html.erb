<div class="container">
  <div class="row">
    <div class="col-sx-12 col-sm-6 col-md-4 col-md-offset-4">
      <h1>Edit Task</h1>
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">

          <%= f.label :details %>
          <%= f.text_field :details %>
        </div>
        <div class="form-group">

          <%= f.label :completed %>
          <%= f.check_box :completed %>
        </div>

          <%= f.submit class: "btn btn-success" %>
      <% end %>

      <%= link_to "Go back to the list", tasks_path %>
    </div>
  </div>
</div>
